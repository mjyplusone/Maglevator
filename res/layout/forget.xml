<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/login_main1" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="75" >      
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="37"
        android:orientation="horizontal" >	
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="fill_parent"></LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="13"
            android:layout_height="fill_parent"
            android:background="@drawable/iot"></LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="fill_parent"></LinearLayout>      
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="37" >       
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:orientation="horizontal" >
		<LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="fill_parent"></LinearLayout>
		<LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="fill_parent"
            android:background="@drawable/red">		    
		</LinearLayout>
		<TextView
		    android:layout_width="0dp"
            android:layout_weight="65"
            android:layout_height="fill_parent" 
            android:gravity="center"      
            android:text=" 忘记密码"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
		<LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="fill_parent"></LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="fill_parent"></LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="208"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="0dp"
        	android:layout_weight="2"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="#33FFFFFF" ></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="26"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="60" 
                android:gravity="center"
                android:text="用户名  "
                android:textColor="#FFFFFF"/>
            <EditText 
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="150"               
            	android:background="@drawable/user"
            	android:textColor="#FFFFFF"
            	android:focusable="true"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="35"></LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="26"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="60" 
                android:gravity="center"
                android:text="手机号  "
                android:textColor="#FFFFFF"/>
            <EditText 
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="150"               
            	android:background="@drawable/user"
            	android:textColor="#FFFFFF"
            	android:focusable="true"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="35"></LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="26"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="60" 
                android:gravity="center"
                android:text="验证码  "
                android:textColor="#FFFFFF"/>
            <EditText 
                android:id="@+id/verify"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="80"               
            	android:background="@drawable/user"
            	android:textColor="#FFFFFF"
            	android:focusable="true"
            	android:hint="六位验证码"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="70"
                android:orientation="vertical" >
	            <Button 
	                android:id="@+id/send"
	                android:layout_gravity="right"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"  
	                android:background="@drawable/login_button_selector"
	                android:textColor="#FFFFFF"
	                android:text="获取验证码"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="35">                
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="26"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="60" 
                android:gravity="center"
                android:text="新密码  "
                android:textColor="#FFFFFF"/>
            <EditText 
                android:id="@+id/newpass"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="150"               
            	android:background="@drawable/user"
            	android:textColor="#FFFFFF"
            	android:focusable="true"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="35"></LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="16"></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="11"></LinearLayout>
            <Button
                android:id="@+id/sign_btn"
                android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="5"
	            android:background="@drawable/login_button_selector"
	            android:text="确  定"
	            android:textColor="#FFFFFF"
	            android:gravity="center"/>
            <LinearLayout
                android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="11"></LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="16"></LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="0dp"
        	android:layout_weight="2"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="#33FFFFFF" ></LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="110" >
        
    </LinearLayout>
    
    
</LinearLayout>


