</LinearLayout>


<!-- The navigation drawer -->

  <include
      android:id="@+id/right_sliding"
      android:layout_width="290dp"
  	  android:layout_height="match_parent"
      layout="@layout/right_layout" 
      android:layout_gravity="end"/>
   
</android.support.v4.widget.DrawerLayout>





















