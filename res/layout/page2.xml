<android.support.v4.widget.DrawerLayout    
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="vertical"
    android:background="?mybackground" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:baselineAligned="false" ></LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="26"
        android:orientation="horizontal" >
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:baselineAligned="false"></LinearLayout>
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="22"
            android:background="?user"></LinearLayout>
       <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="212">
            <TextView
                android:id="@+id/username" 
                android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:textSize="22sp"
	            android:textColor="?usertext"/>
        </LinearLayout>
        <ImageButton 
            android:id="@+id/drawerlayout"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="22"           
            android:background="?drawer"
            android:baselineAligned="false"
            android:onClick="imagebtn" />
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="7"></LinearLayout>
    </LinearLayout>

    <!-- 辅助布局 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="46"
        android:baselineAligned="false" ></LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:orientation="horizontal"
        android:baselineAligned="false" >
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="7"></LinearLayout>
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="13"
        	android:background="?welcome"></LinearLayout>
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="7"></LinearLayout>
    </LinearLayout>
    
    <!-- 辅助布局 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="61" ></LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="113"
        android:orientation="horizontal"
        android:baselineAligned="false" >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"></LinearLayout>
        <!-- 此处为图片1 -->
        <LinearLayout
            android:id="@+id/chart1"                                            
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11"
            android:orientation="vertical"
            android:onClick="onChart1">
            <LinearLayout
                android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="18" ></LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="35"
		        android:orientation="horizontal" >
		        <LinearLayout 
		            android:layout_width="0dp"
		            android:layout_height="fill_parent"
		            android:layout_weight="4"></LinearLayout>
                <ImageView 
                    android:layout_width="0dp"
		            android:layout_height="fill_parent"
		            android:layout_weight="3"
                    android:scaleType="centerInside"
                    android:background="?login_image1"/>
