<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_main"
    tools:context="com.example.version1.MainActivity" >
    
    <LinearLayout 
        android:id="@+id/ver"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
     
        <LinearLayout 
            android:id="@+id/hor1"
            android:layout_weight="7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/hor2"
            android:layout_weight="21"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <LinearLayout 
                android:layout_weight="28"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent">
	        </LinearLayout>
	        <RelativeLayout
	            android:id="@+id/circle" 
	            android:layout_weight="213"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent">
	            
	            <ImageView
	                android:id="@+id/circle1"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/circle1"
	                android:scaleType="centerInside" />
	            <ImageView
	                android:id="@+id/circle2"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/circle2"
	                android:scaleType="centerInside" />
	            <ImageView
	                android:id= "@+id/strut"
	                android:layout_width= "wrap_content"
	                android:layout_height= "wrap_content"
	                android:layout_centerVertical="true" />      
	             <EditText
	                android:id="@+id/user"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_above="@id/strut"
	                android:background="@drawable/user"
	                android:scaleType="centerInside"
	                android:hint=" 账号"
	                android:textColor="#FFFFFF" />
	             <ImageView
	                android:id="@+id/num1"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_above="@id/user"
	                android:scaleType="centerInside" />
	             <ImageView
	                android:id="@+id/xy"
	                android:layout_centerHorizontal="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_above="@id/num1"
	                android:background="@drawable/iot"
	                android:scaleType="centerInside" />
	             <EditText
	                android:id="@+id/pass"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/strut"
	                android:background="@drawable/user"
	                android:scaleType="centerInside"
	                android:hint=" 密码"
	                android:textColor="#FFFFFF" />
	             <ImageView
	                android:id="@+id/num2"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/pass"
	                android:scaleType="centerInside" />
	             <Button
	                android:id="@+id/login"
	                android:layout_centerInParent="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/num2"
	                android:background="@drawable/login_button_selector"
	                android:scaleType="centerInside"
	                android:text="@string/login"
	                android:textColor="#FFFFFF" />

	            
	        </RelativeLayout>
            <LinearLayout 
                android:layout_weight="28"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent">
	        </LinearLayout>
         
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/hor3"
            android:layout_weight="19"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
   
            <TextView 
                android:id="@+id/edit_text1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:textSize="15sp"               
                android:text="@string/signin"
                android:autoLink="all"/>
            
             <TextView 
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_gravity="bottom|center_horizontal"/>
            
            <TextView 
                android:id="@+id/edit_text2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:text="@string/forget"/>
        
        </LinearLayout>
        
</LinearLayout>
    
